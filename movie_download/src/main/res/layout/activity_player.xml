<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
        android:id="@+id/video_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 【新增】透明触摸层：专门负责拦截手势 -->
    <!-- 必须放在 video_player 下面(代码顺序上)，这样层级才是在播放器之上 -->
    <View
        android:id="@+id/v_touch_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:background="#00000000" />


    <!-- 新增：倍速/快退 状态提示 -->
    <TextView
        android:id="@+id/tv_speed_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#80000000"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:drawablePadding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="2.0x 倍速播放中" />

    <!--
      注意：移除了 layout_marginEnd 等约束定位，
      因为我们要用代码(x,y)来控制位置。
      只保留初始位置（比如右上角），后续由 OnTouchListener 接管
    -->
    <ImageView
        android:id="@+id/iv_download_side"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_download_icon"
        android:background="@drawable/bg_download_btn"
        android:padding="12dp"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        app:tint="#FF5722" />

</androidx.constraintlayout.widget.ConstraintLayout>