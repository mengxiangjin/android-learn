            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <!-- å‘å¸ƒæ—¶é—´ -->
        <TextView
            android:id="@+id/tv_time_ago"
            android:layout_width="wrap_content"
