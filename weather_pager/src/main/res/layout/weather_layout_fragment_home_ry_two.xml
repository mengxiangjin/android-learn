<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FF000A18"
   >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/weather_icon_top_bg_ry_two"
                app:layout_constraintTop_toTopOf="parent">


                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:src="@drawable/weather_icon_back_ry_two"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="17dp"/>

                <View
                    android:id="@+id/back"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>


                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="七日天气"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/back"
                    app:layout_constraintBottom_toBottomOf="@id/back"
                    />

                <ImageView
                    android:id="@+id/img_weather"
                    android:layout_width="108dp"
                    android:layout_height="108dp"
                    android:layout_marginTop="61dp"
                    android:layout_marginStart="29dp"
                    tools:src="@drawable/weather_icon_cloudy_four"
                    app:layout_constraintTop_toBottomOf="@id/back"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tv_current_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="6月5日 星期一"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    android:layout_marginTop="34dp"
                    android:layout_marginEnd="88dp"
                    app:layout_constraintTop_toBottomOf="@id/title"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <TextView
                    android:id="@+id/tv_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="20"
                    android:textColor="#ffffffff"
                    android:textSize="77sp"
                    android:textStyle="bold"
                    android:layout_marginTop="14dp"
                    app:layout_constraintTop_toTopOf="@id/tv_current_date"
                    app:layout_constraintStart_toStartOf="@id/tv_current_date"
                    />

                <TextView
                    android:id="@+id/tv_temperature_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="/17°"
                    android:textColor="#ffffffff"
                    android:textSize="39sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_temperature"
                    app:layout_constraintStart_toEndOf="@id/tv_temperature"
                    />

                <TextView
                    android:id="@+id/tv_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="多云"
                    android:textColor="#ffffffff"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@id/tv_current_date"
                    app:layout_constraintTop_toBottomOf="@id/tv_temperature"/>

                <View
                    android:id="@+id/divide"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginHorizontal="36dp"
                    android:layout_marginTop="14dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_weather"
                    android:background="#2f9af6"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/divide"
                    android:layout_marginTop="17dp"
                    android:paddingBottom="58dp"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/weather_icon_wind_speed_ry_one"/>

                        <TextView
                            android:id="@+id/tv_wind_speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="13 km/h"
                            android:textColor="#ffffffff"
                            android:textSize="16sp"
                            android:layout_marginTop="4dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="风速"
                            android:textColor="#ff75b9ff"
                            android:textSize="14sp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="22dp"
                            android:layout_marginTop="1dp"
                            android:src="@drawable/weather_icon_water_level_ry_one"/>

                        <TextView
                            android:id="@+id/tv_water"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="54%"
                            android:textColor="#ffffffff"
                            android:textSize="16sp"
                            android:layout_marginTop="4dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="湿度"
                            android:textColor="#ff75b9ff"
                            android:textSize="14sp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="1dp"
                            android:src="@drawable/weather_icon_sun_ry_one"/>

                        <TextView
                            android:id="@+id/tv_sun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="1"
                            android:textColor="#ffffffff"
                            android:textSize="16sp"
                            android:layout_marginTop="4dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="紫外线"
                            android:textColor="#ff75b9ff"
                            android:textSize="14sp"
                            />
                    </LinearLayout>



                </LinearLayout>




            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cl_head"
                android:layout_marginBottom="15dp"
                android:paddingBottom="20dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>