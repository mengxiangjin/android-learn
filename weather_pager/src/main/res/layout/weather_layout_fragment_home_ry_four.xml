<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/weather_shape_top_bg_ry_four"
   >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_head"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent">


                <ImageView
                    android:id="@+id/img_locate"
                    android:layout_width="19dp"
                    android:layout_height="22dp"
                    android:src="@drawable/weather_icon_locate_ry_one"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="86dp"
                    android:layout_marginTop="21dp"/>

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="北京，大兴国际机场"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:layout_marginStart="14dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/img_locate"
                    app:layout_constraintBottom_toBottomOf="@id/img_locate"
                    />

                <TextView
                    android:id="@+id/tv_current_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="6月5日 星期一"
                    android:textSize="14sp"
                    android:textColor="#FFFFFFFF"
                    android:layout_marginTop="2dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_city"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_time_weather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="22dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_current_date"
                    android:layout_marginTop="20dp"/>




                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/rv_time_weather"
                    android:layout_marginTop="46dp"
                    android:layout_marginHorizontal="23dp"
                    android:elevation="1dp"
                    android:background="@drawable/weather_shape_msg_bg_ry_four">

                    <TextView
                        android:id="@+id/tv_temperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="28°"
                        android:textColor="#FFFFFF"
                        android:textSize="70sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="22dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />

                    <TextView
                        android:id="@+id/tv_max_temperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="最高 32°"
                        android:textColor="#ffffffff"
                        android:textSize="14sp"
                        android:layout_marginEnd="3dp"
                        app:layout_constraintStart_toStartOf="@id/tv_temperature"
                        app:layout_constraintEnd_toEndOf="@id/tv_temperature"
                        app:layout_constraintTop_toBottomOf="@id/tv_temperature"
                        />

                    <ImageView
                        android:id="@+id/img_forecast_weather"
                        android:layout_width="94dp"
                        android:layout_height="94dp"
                        tools:src="@drawable/weather_icon_cloudy_four"
                        app:layout_constraintTop_toBottomOf="@id/tv_max_temperature"
                        app:layout_constraintStart_toStartOf="@id/tv_max_temperature" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/img_forecast_weather"
                        android:paddingBottom="21dp"
                        >

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <View
                                android:id="@+id/wind_bg"
                                android:layout_width="71dp"
                                android:layout_height="71dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/weather_shape_menu_bg_ry_four"/>


                            <TextView
                                android:id="@+id/tv_wind_level"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="24dp"
                                android:textColor="#ffffffff"
                                android:textSize="14sp"
                                tools:text="1级" />



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="风速"
                                android:layout_marginTop="6dp"
                                android:layout_below="@id/wind_bg"
                                android:layout_centerHorizontal="true"
                                android:textColor="#ffffff"
                                android:textSize="12sp"
                                />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <View
                                android:id="@+id/water_bg"
                                android:layout_width="71dp"
                                android:layout_height="71dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/weather_shape_menu_bg_ry_four"/>

                            <TextView
                                android:id="@+id/tv_water"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="54%"
                                android:textColor="#ffffffff"
                                android:textSize="14sp"
                                android:layout_marginTop="24dp"
                                android:layout_centerHorizontal="true"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="湿度"
                                android:layout_marginTop="6dp"
                                android:layout_below="@id/water_bg"
                                android:layout_centerHorizontal="true"
                                android:textColor="#ffffff"
                                android:textSize="12sp"
                                />
                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <View
                                android:id="@+id/atmos_bg"
                                android:layout_width="71dp"
                                android:layout_height="71dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/weather_shape_menu_bg_ry_four"/>

                            <TextView
                                android:id="@+id/tv_atmos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="1004hPa"
                                android:textColor="#ffffffff"
                                android:textSize="14sp"
                                android:layout_marginTop="24dp"
                                android:layout_centerHorizontal="true"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="气压"
                                android:layout_marginTop="6dp"
                                android:layout_below="@id/atmos_bg"
                                android:layout_centerHorizontal="true"
                                android:textColor="#ffffff"
                                android:textSize="12sp"
                                />
                        </RelativeLayout>



                    </LinearLayout>



                </androidx.constraintlayout.widget.ConstraintLayout>





                <ImageView
                    android:id="@+id/img_weather"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:elevation="1dp"
                    tools:src="@drawable/weather_icon_cloudy_four"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/rv_time_weather"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tv_forecast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="今晚预计大雨"
                    android:elevation="1dp"
                    android:textColor="#ffffffff"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    app:layout_constraintTop_toBottomOf="@id/img_weather"
                    app:layout_constraintStart_toStartOf="@id/img_weather"
                    />

                <TextView
                    android:id="@+id/tv_remind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注意防护！"
                    android:textColor="#ffffffff"
                    android:elevation="1dp"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="2dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_forecast"
                    app:layout_constraintStart_toStartOf="@id/tv_forecast"
                    />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/cl_msg"
                    android:layout_marginTop="80dp"
                    android:background="@drawable/weather_shape_bottom_bg_ry_four"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_weather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/cl_msg"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="15dp"
                    android:paddingBottom="20dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>