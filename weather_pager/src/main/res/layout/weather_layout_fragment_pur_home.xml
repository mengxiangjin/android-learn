<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#A0B0FD">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="438dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/weather_home_page_pur_bg"/>
                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#131C91"
                    android:textStyle="bold"
                    android:text="北京"
                    android:drawableLeft="@drawable/weather_location_icon_pur"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="64dp"
                    android:drawablePadding="9dp"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#535DF4"
                    android:textStyle="bold"
                    android:text="8月21日 星期天"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="100dp"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tv_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="123dp"
                    android:includeFontPadding="false"
                    android:textColor="#535DF4"
                    android:textStyle="bold"
                    android:text="20"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="114dp"/>
                <TextView
                    android:id="@+id/tv_temperatureTip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#535DF4"
                    android:textStyle="bold"
                    android:text="温度适中"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_temperature"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_temperature"
                    app:layout_constraintRight_toRightOf="@+id/tv_temperature"/>
                <View
                    android:id="@+id/temperatureRightView"
                    android:layout_width="1px"
                    android:layout_height="1px"
                    app:layout_constraintTop_toTopOf="@+id/tv_temperature"
                    app:layout_constraintLeft_toRightOf="@+id/tv_temperature"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="23dp"
                    android:textColor="#535DF4"
                    android:textStyle="bold"
                    android:text="℃"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/temperatureRightView"
                    android:layout_marginTop="135dp"/>
                <ImageView
                    android:id="@+id/img_weather"
                    android:layout_width="145dp"
                    android:layout_height="145dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="145dp"
                    android:layout_marginRight="55dp"
                    android:src="@drawable/weather_icon_cloudy"/>
                <View
                    android:id="@+id/topMenuView"
                    android:layout_width="match_parent"
                    android:layout_height="83dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/weather_shape_weather_pur_top_menu_bg"
                    app:layout_constraintTop_toBottomOf="@+id/img_weather"
                    android:layout_marginTop="24dp"
                    android:alpha="0.44"/>
                <LinearLayout
                    android:id="@+id/ll_pm"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="@+id/topMenuView"
                    app:layout_constraintLeft_toLeftOf="@+id/topMenuView"
                    app:layout_constraintRight_toRightOf="@+id/topMenuView"
                    app:layout_constraintBottom_toBottomOf="@+id/topMenuView"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/weather_pur_pm_icon"/>
                    <TextView
                        android:id="@+id/tv_pm25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#131C91"
                        android:textStyle="bold"
                        android:text="27"
                        android:includeFontPadding="false"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8sp"
                        android:textColor="#535DF4"
                        android:textStyle="bold"
                        android:text="PM2.5"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="@+id/topMenuView"
                    app:layout_constraintLeft_toRightOf="@+id/ll_pm"
                    app:layout_constraintRight_toRightOf="@+id/topMenuView"
                    app:layout_constraintBottom_toBottomOf="@+id/topMenuView"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/weather_pur_wind_icon"/>
                    <TextView
                        android:id="@+id/tv_windSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#131C91"
                        android:textStyle="bold"
                        android:text="15km/h"
                        android:includeFontPadding="false"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8sp"
                        android:textColor="#535DF4"
                        android:textStyle="bold"
                        android:text="风速"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="@+id/topMenuView"
                    app:layout_constraintRight_toLeftOf="@+id/ll_pm"
                    app:layout_constraintLeft_toLeftOf="@+id/topMenuView"
                    app:layout_constraintBottom_toBottomOf="@+id/topMenuView"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/weather_pur_sun_icon"/>
                    <TextView
                        android:id="@+id/tv_sun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#131C91"
                        android:textStyle="bold"
                        android:text="中等"
                        android:includeFontPadding="false"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8sp"
                        android:textColor="#535DF4"
                        android:textStyle="bold"
                        android:text="风速"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#131C91"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="32dp"
                android:text="未来天气预报"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="15dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>