<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFEFFDFD"
   >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:id="@+id/cl_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toTopOf="parent">


                <ImageView
                    android:id="@+id/img_locate"
                    android:layout_width="19dp"
                    android:layout_height="22dp"
                    android:src="@drawable/weather_icon_locate_ry_three"
                   />

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="北京，大兴国际机场"
                    android:layout_marginLeft="8dp"
                    android:textColor="#ff323232"
                    android:textSize="18sp"
                    />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cl_head">

                <View
                    android:id="@+id/top_bg"
                    android:layout_width="match_parent"
                    android:layout_height="194dp"
                    android:layout_marginHorizontal="19dp"
                    android:background="@drawable/weather_shape_cl_msg_bg_ry_three"
                    app:layout_constraintTop_toTopOf="@id/img_weather"
                    android:layout_marginTop="43dp"/>

                <ImageView
                    android:id="@+id/img_weather"
                    android:layout_width="156dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="37dp"
                    tools:src="@drawable/weather_icon_cloudy_four"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="多云"
                    android:textColor="#ffffffff"
                    android:textSize="22sp"
                    android:layout_marginTop="18dp"
                    android:layout_marginStart="12dp"
                    app:layout_constraintStart_toStartOf="@id/img_weather"
                    app:layout_constraintTop_toBottomOf="@id/img_weather"/>

                <TextView
                    android:id="@+id/tv_current_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="星期一，05/06"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="@id/tv_weather"
                    app:layout_constraintTop_toBottomOf="@id/tv_weather"
                    />

                <TextView
                    android:id="@+id/tv_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="28°"
                    android:textColor="#FFFFFF"
                    android:textSize="70sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="33dp"
                    app:layout_constraintTop_toTopOf="@id/top_bg"
                    app:layout_constraintEnd_toEndOf="@id/top_bg"
                    />
                <ImageView
                    android:layout_width="76dp"
                    android:layout_height="62dp"
                    android:src="@drawable/weather_icon_msg_flag_ry_three"
                    android:layout_marginEnd="33dp"
                    android:layout_marginTop="9dp"
                    app:layout_constraintEnd_toEndOf="@id/top_bg"
                    app:layout_constraintTop_toBottomOf="@id/tv_temperature"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_air"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                android:paddingBottom="23dp"
                android:layout_marginHorizontal="19dp"
                android:background="@drawable/weather_shape_air_quality_ry_three"
                app:layout_constraintTop_toBottomOf="@id/cl_msg"
                android:layout_marginTop="23dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="空气质量"
                    android:textColor="#ff181818"
                    android:textSize="20sp"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <ImageView
                    android:id="@+id/img_refresh"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/weather_icon_msg_refresh_ry_three"
                    app:layout_constraintTop_toTopOf="@id/title"
                    app:layout_constraintBottom_toBottomOf="@id/title"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="26dp"/>

                <LinearLayout
                    android:id="@+id/ll_filed1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_marginTop="19dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/ll_filed2"
                    app:layout_constraintTop_toBottomOf="@id/title">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PM2.5"
                        android:textColor="#FF4DA5F5"
                        android:textSize="20sp"
                         />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="细颗粒物"
                        android:textColor="#ffd4d4d4"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/tv_pm25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="27"
                        android:textColor="#ff353535"
                        android:textSize="16sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_filed2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toRightOf="@+id/ll_filed1"
                    app:layout_constraintRight_toLeftOf="@+id/ll_filed3"
                    app:layout_constraintTop_toTopOf="@id/ll_filed1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PM10"
                        android:textColor="#FF4DA5F5"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="粗颗粒物"
                        android:textColor="#ffd4d4d4"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/tv_pm10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="75"
                        android:textColor="#ff353535"
                        android:textSize="16sp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_filed3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toRightOf="@+id/ll_filed2"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/ll_filed1">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SO₂"
                        android:textColor="#FF4DA5F5"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="二氧化硫"
                        android:textColor="#ffd4d4d4"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/tv_so2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="5"
                        android:textColor="#ff353535"
                        android:textSize="16sp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_filed4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="16dp"
                    app:layout_constraintRight_toLeftOf="@+id/ll_filed5"
                    app:layout_constraintTop_toBottomOf="@+id/ll_filed1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NO₂"
                        android:textColor="#FF4DA5F5"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="二氧化氮"
                        android:textColor="#ffd4d4d4"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/tv_no2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="27"
                        android:textColor="#ff353535"
                        android:textSize="16sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_filed5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toRightOf="@+id/ll_filed4"
                    app:layout_constraintRight_toLeftOf="@+id/ll_filed6"
                    app:layout_constraintTop_toTopOf="@+id/ll_filed4">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CO"
                        android:textColor="#FF4DA5F5"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="一氧化碳"
                        android:textColor="#ffd4d4d4"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/tv_co"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="0.5"
                        android:textColor="#ff353535"
                        android:textSize="16sp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_filed6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toRightOf="@+id/ll_filed5"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ll_filed4">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="O₃"
                        android:textColor="#FF4DA5F5"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="臭氧"
                        android:textColor="#ffd4d4d4"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/tv_o3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="51"
                        android:textColor="#ff353535"
                        android:textSize="16sp"
                        />

                </LinearLayout>



            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cl_air"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="15dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>