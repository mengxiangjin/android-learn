<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/weather_icon_bg_jo_one"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">



                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="北京，大兴国际机场"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:layout_marginTop="36dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />


                <TextView
                    android:id="@+id/tv_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="+18 ℃"
                    android:textColor="#FFFFFF"
                    android:textSize="70sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_city"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <ImageView
                    android:id="@+id/img_weather"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:layout_marginStart="37dp"
                    android:layout_marginTop="50dp"
                    tools:src="@drawable/weather_icon_cloudy_four"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_temperature" />

            </androidx.constraintlayout.widget.ConstraintLayout>



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_time_weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cl_head"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="15dp"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/chart_view"
                android:layout_width="match_parent"
                android:layout_height="188dp"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@id/rv_time_weather"
                android:background="@drawable/weather_shape_chart_line_bg_jo_one"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5日天气预报"
                    android:textColor="#ffffffff"
                    android:textSize="14sp"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />
                
                <com.jin.weather_pager.view.WeatherLineChartView
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/title"
                    app:layout_constraintBottom_toTopOf="@id/ll_day"/>

                <LinearLayout
                    android:id="@+id/ll_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="28dp">
                    
                    
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_one"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        
                        
                        <View
                            android:id="@+id/field_one_bg"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:background="@drawable/weather_shape_day_bg_jo_one"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="今天"
                            android:textColor="#ffffffff"
                            android:gravity="center"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="@id/field_one_bg"
                            app:layout_constraintTop_toTopOf="@id/field_one_bg"
                            app:layout_constraintEnd_toEndOf="@id/field_one_bg"
                            app:layout_constraintStart_toStartOf="@id/field_one_bg"
                            />
                        
                        
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_two"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">


                        <View
                            android:id="@+id/field_two_bg"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:visibility="invisible"
                            android:background="@drawable/weather_shape_day_bg_jo_one"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="明天"
                            android:textColor="#ffffffff"
                            android:gravity="center"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="@id/field_two_bg"
                            app:layout_constraintTop_toTopOf="@id/field_two_bg"
                            app:layout_constraintEnd_toEndOf="@id/field_two_bg"
                            app:layout_constraintStart_toStartOf="@id/field_two_bg"
                            />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_three"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">


                        <View
                            android:id="@+id/field_three_bg"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:visibility="invisible"
                            android:background="@drawable/weather_shape_day_bg_jo_one"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:id="@+id/tv_day_three"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="明天"
                            android:textColor="#ffffffff"
                            android:gravity="center"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="@id/field_three_bg"
                            app:layout_constraintTop_toTopOf="@id/field_three_bg"
                            app:layout_constraintEnd_toEndOf="@id/field_three_bg"
                            app:layout_constraintStart_toStartOf="@id/field_three_bg"
                            />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_four"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">


                        <View
                            android:id="@+id/field_four_bg"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:visibility="invisible"
                            android:background="@drawable/weather_shape_day_bg_jo_one"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:id="@+id/tv_day_four"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="明天"
                            android:textColor="#ffffffff"
                            android:gravity="center"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="@id/field_four_bg"
                            app:layout_constraintTop_toTopOf="@id/field_four_bg"
                            app:layout_constraintEnd_toEndOf="@id/field_four_bg"
                            app:layout_constraintStart_toStartOf="@id/field_four_bg"
                            />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_five"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">


                        <View
                            android:id="@+id/field_five_bg"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:visibility="invisible"
                            android:background="@drawable/weather_shape_day_bg_jo_one"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:id="@+id/tv_day_five"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="明天"
                            android:textColor="#ffffffff"
                            android:gravity="center"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="@id/field_five_bg"
                            app:layout_constraintTop_toTopOf="@id/field_five_bg"
                            app:layout_constraintEnd_toEndOf="@id/field_five_bg"
                            app:layout_constraintStart_toStartOf="@id/field_five_bg"
                            />


                    </androidx.constraintlayout.widget.ConstraintLayout>




                </LinearLayout>



            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>