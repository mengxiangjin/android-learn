<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEEF4FA"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FFEEF4FA"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFEEF4FA"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="30dp">

                <View
                    android:id="@+id/back_bg"
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="21dp"
                    android:background="@drawable/weather_layer_back_bg"/>

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="11dp"
                    android:src="@drawable/weather_icon_back_yl_two"
                    app:layout_constraintStart_toStartOf="@id/back_bg"
                    app:layout_constraintEnd_toEndOf="@id/back_bg"
                    app:layout_constraintTop_toTopOf="@id/back_bg"
                    app:layout_constraintBottom_toBottomOf="@id/back_bg"/>

                <View
                    android:id="@+id/locate_bg"
                    android:layout_width="106dp"
                    android:layout_height="40dp"
                    android:elevation="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@drawable/weather_shape_locate_bg"
                    app:layout_constraintStart_toEndOf="@id/back_bg"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="14dp"/>

                <ImageView
                    android:id="@+id/locate_img"
                    android:layout_width="14dp"
                    android:layout_height="20dp"
                    android:elevation="1dp"
                    android:src="@drawable/weather_icon_locate_yl_one"
                    android:layout_marginStart="22dp"
                    app:layout_constraintTop_toTopOf="@id/locate_bg"
                    app:layout_constraintBottom_toBottomOf="@id/locate_bg"
                    app:layout_constraintStart_toStartOf="@id/locate_bg"/>

                <TextView
                    android:id="@+id/tv_locate_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="北京"
                    android:elevation="1dp"
                    android:textColor="#ff18126a"
                    android:textSize="16sp"
                    android:layout_marginStart="9dp"
                    app:layout_constraintStart_toEndOf="@id/locate_img"
                    app:layout_constraintTop_toTopOf="@id/locate_bg"
                    app:layout_constraintBottom_toBottomOf="@id/locate_bg"
                    />

                <ImageView
                    android:id="@+id/img_search"
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:src="@drawable/weather_icon_add"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="20dp"/>



            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:background="#FFEEF4FA"
                app:layout_constraintTop_toBottomOf="@id/cl_head">



                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="500dp"
                    android:layout_marginTop="24dp"
                    tools:background="#2196F3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="146dp"
                android:clipChildren="false"
                app:layout_constraintTop_toBottomOf="@id/cl_msg">



                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/view_pager_date"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="130dp"
                    android:layout_marginRight="130dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="24dp"
                    tools:background="#2196F3"
                    android:clipChildren="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>