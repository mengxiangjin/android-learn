<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFEFFDFD"
   >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF000A18"
        >



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="50dp"
                android:background="@drawable/weather_icon_top_bg_ry_one"
                app:layout_constraintTop_toTopOf="parent">


                <ImageView
                    android:id="@+id/img_locate"
                    android:layout_width="19dp"
                    android:layout_height="22dp"
                    android:src="@drawable/weather_icon_locate_ry_one"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="86dp"
                    android:layout_marginTop="45dp"/>

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="北京，大兴国际机场"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:layout_marginStart="14dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/img_locate"
                    app:layout_constraintBottom_toBottomOf="@id/img_locate"
                    />




                <ImageView
                    android:id="@+id/img_weather"
                    android:layout_width="286dp"
                    android:layout_height="286dp"
                    android:layout_marginTop="12dp"
                    tools:src="@drawable/weather_icon_cloudy_four"
                    app:layout_constraintTop_toBottomOf="@id/tv_city"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />


                <TextView
                    android:id="@+id/tv_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="28°"
                    android:textColor="#FFFFFF"
                    android:textSize="121sp"
                    android:textStyle="bold"
                    android:layout_marginTop="250dp"
                    app:layout_constraintTop_toTopOf="@id/img_weather"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <TextView
                    android:id="@+id/tv_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="多云"
                    android:textColor="#ffffffff"
                    android:textSize="28sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_temperature"/>

                <TextView
                    android:id="@+id/tv_current_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="6月5日 星期一"
                    android:textSize="16sp"
                    android:textColor="#FF75B9FF"
                    android:layout_marginTop="2dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_weather"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <View
                    android:id="@+id/divide"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginHorizontal="34dp"
                    android:layout_marginTop="14dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_current_date"
                    android:background="#2e90f6"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/divide"
                    android:layout_marginTop="14dp"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/weather_icon_wind_speed_ry_one"/>

                        <TextView
                            android:id="@+id/tv_wind_speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="13 km/h"
                            android:textColor="#ffffffff"
                            android:textSize="16sp"
                            android:layout_marginTop="4dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="风速"
                            android:textColor="#ff75b9ff"
                            android:textSize="14sp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="22dp"
                            android:layout_marginTop="1dp"
                            android:src="@drawable/weather_icon_water_level_ry_one"/>

                        <TextView
                            android:id="@+id/tv_water"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="54%"
                            android:textColor="#ffffffff"
                            android:textSize="16sp"
                            android:layout_marginTop="4dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="湿度"
                            android:textColor="#ff75b9ff"
                            android:textSize="14sp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="1dp"
                            android:src="@drawable/weather_icon_sun_ry_one"/>

                        <TextView
                            android:id="@+id/tv_sun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="1"
                            android:textColor="#ffffffff"
                            android:textSize="16sp"
                            android:layout_marginTop="4dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="紫外线"
                            android:textColor="#ff75b9ff"
                            android:textSize="14sp"
                            />
                    </LinearLayout>



                </LinearLayout>




            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日天气"
                android:textColor="#ffffffff"
                android:textSize="18sp"
                android:layout_marginStart="23dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_head"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_day_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/today"
                app:layout_constraintBottom_toBottomOf="@id/today">

                <TextView
                    android:id="@+id/tv_go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="七日天气"
                    android:textColor="#ff74859b"
                    android:textSize="14sp"
                    android:layout_marginEnd="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="10dp"
                    android:src="@drawable/weather_icon_go_ry_one"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@id/tv_go"
                    app:layout_constraintTop_toTopOf="@id/tv_go"
                    app:layout_constraintBottom_toBottomOf="@id/tv_go"/>

            </androidx.constraintlayout.widget.ConstraintLayout>



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cl_day_weather"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="15dp"
                android:paddingBottom="20dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>