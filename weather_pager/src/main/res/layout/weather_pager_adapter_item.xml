<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">





                    <ImageView
                        android:id="@+id/img_weather_bg"
                        android:layout_width="237dp"
                        android:layout_height="361dp"
                        tools:src="@drawable/weather_icon_bg_thunder_yl_two"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <ImageView
                        android:id="@+id/img_weather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:src="@drawable/weather_icon_cloudy"
                        android:layout_marginTop="4dp"
                        app:layout_constraintStart_toStartOf="@id/img_weather_bg"
                        app:layout_constraintEnd_toEndOf="@id/img_weather_bg"
                        app:layout_constraintTop_toTopOf="@id/img_weather_bg"/>

                    <TextView
                        android:id="@+id/tv_locate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="北京市"
                        android:textColor="#fff3f8fe"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@id/img_weather_bg"
                        app:layout_constraintEnd_toEndOf="@id/img_weather_bg"
                        app:layout_constraintTop_toBottomOf="@id/img_weather"
                        />

                    <TextView
                        android:id="@+id/tv_temperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="24℃"
                        android:textStyle="bold"
                        android:textColor="#ffffffff"
                        android:textSize="64sp"
                        app:layout_constraintStart_toStartOf="@id/img_weather_bg"
                        app:layout_constraintEnd_toEndOf="@id/img_weather_bg"
                        app:layout_constraintTop_toBottomOf="@id/tv_locate"
                        />

                    <TextView
                        android:id="@+id/tv_weather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="多云转雷阵雨"
                        android:textColor="#ffffffff"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@id/img_weather_bg"
                        app:layout_constraintEnd_toEndOf="@id/img_weather_bg"
                        app:layout_constraintTop_toBottomOf="@id/tv_temperature"
                        />





</androidx.constraintlayout.widget.ConstraintLayout>